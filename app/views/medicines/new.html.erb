<h1>登録フォーム</h1>
<%= form_with model: @medicine, local: true do |form| %>


  <div class="form-group">
    <%= form.label :hospital_id, "病院ID" %>
    <%= form.collection_select :hospital_id, Hospital.all, :id, :name, { include_blank: "病院を選択してください" }, { class: "form-control" } %>
  </div>


    <%= form.hidden_field :user_id, value: current_user.id %>


  <div class="form-group">
    <%= form.label :name, "薬剤名" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :efficacy, "効果効能" %>
    <%= form.text_field :effcacy, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :memo, "メモ" %>
    <%= form.text_field :memo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :stock, "残数" %>
    <%= form.text_field :stock, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image1, "画像1" %>
    <%= form.file_field :image1, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image2, "画像2" %>
    <%= form.file_field :image2, class: "form-control" %>
  </div>

  <%= form.submit "確定" %>
<% end %>
